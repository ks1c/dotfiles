#--- media key bindings ---#

XF86AudioRaiseVolume
	amixer sset Master 5%+ & ~/scripts/dwmbar.sh refresh

shift + XF86AudioRaiseVolume
	amixer sset Master 100% & ~/scripts/dwmbar.sh refresh

XF86AudioLowerVolume
	amixer sset Master 5%- & ~/scripts/dwmbar.sh refresh

shift + XF86AudioLowerVolume
	amixer sset Master 0% & ~/scripts/dwmbar.sh refresh

