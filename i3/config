#----- Custom definitions
set $mod mod4
font pango:monospace 8
for_window [class="^.*"] border pixel 5
gaps inner 5
gaps outer 5
client.focused #4c7899 #285577 #ffffff #9ca380 #9ca380

#----- Starting some things
exec --no-startup-id setxkbmap -option altwin:swap_alt_win
exec --no-startup-id compton
exec --no-startup-id xrdb ~/dotfiles/Xresources
exec --no-startup-id setlaptoptrackpad
exec --no-startup-id flameshot
exec --no-startup-id dunst -config ~/dotfiles/dunstrc

bar { 
	position top        
	font pango:monospace 11
	status_command i3blocks -c ~/.config/i3blocks
}

#----- Basic key bindings
floating_modifier $mod

bindsym $mod+Escape 			exec --no-startup-id ~/scripts/lock.sh
#bindsym $mod+Shift+Escape 		exec --no-startup-id ~/scripts/lock.sh

bindsym Print 				exec --no-startup-id flameshot gui
#bindsym Shift+Print 			exec --no-startup-id flameshot full -p $HOME

bindsym $mod+Return 			exec --no-startup-id i3-sensible-terminal
#bindsym $mod+Return 			exec --no-startuo-id i3-sensible-terminal

bindsym $mod+space 			focus mode_toggle
bindsym $mod+Shift+space 		floating toggle

